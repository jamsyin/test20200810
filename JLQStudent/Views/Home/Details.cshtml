 @model JLQStudent.ViewModels.HomeDetailsViewModel
 @{ 
    
     ViewBag.PageTitle = "Student details from Details.cshtml";
 }
<html>

    <body>
        <h3>@ViewBag.PageTitle</h3>
        <div class="row  justify-content-center m-3">
            <div class=" col-6">
                <div class="card">
                    <div class="card-header">
                        <h1>@Model.Student.Name</h1>
                    </div>
                </div>
                <div class=" card-body text-center">
                    <img class="card-img-top" src="~/images/noimage.png" />
                    <h4>学生ID：@Model.Student.Id</h4>
                    <h4>邮箱：@Model.Student.Email</h4>
                    <h4>主修科目：@Model.Student.Major</h4>
                </div>
                <div class="card-footer text-center">
                    <a href="#" class="btn btn-primary">返回</a>
                    <a href="#" class="btn btn-primary">编辑</a>
                    <a href="#" class="btn btn-primary">删除</a>
                </div>
            </div>


        </div>
    </body>

</html>