@model Student 
@using JLQStudent.Models.Enums 
@inject IStudentRepository _studentreposity
  
@{ ViewBag.Title = "创建学生信息";} 

<form asp-controller="Home" asp-action="Create" method="post" class="mt-1">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class=" form-group  row">
        <label asp-for="Name" class="col-lg-2 col-sm-2" col-form-label></label>
        <div class="col-sm-8">
            <input asp-for=" Name" class="form-control" placeholder="input name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class=" form-group  row">
        <label asp-for="Email " class="col-sm-2" col-form-label></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="input email" />
        </div>

    </div>
    <div class="form-group  row">
        <label asp-for="Major " class="col-sm-2" col-form-label></label>
        <div class="col-sm-10">
            <select asp-for="Major"
                    class=" custom-select mr-sm-2"
                    asp-items="Html .GetEnumSelectList (typeof (MajorEnum ))">
                    <option value="">请选择</option>

            </select>
            <span asp-validation-for="Major" class="text-danger"></span>
        </div>
    </div>
    <div class=" form-group  row">
        <button type="submit"   class =" btn btn-primary">创建</button>
    </div>
    <div  class="form-group row">
        <div class="col-sm-10">
            学生总人数 = @_studentreposity.GetAllStudents().Count().ToString()
        </div>
    </div>   
</form>
